{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "rootDir": "src",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "lib": [
      "ES2020"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "node_modules/@types"
  ]
}